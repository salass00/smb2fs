(welcome)
(set @default-dest "SYS:")
(if (patmatch "(68000|68010)" (database "cpu"))
	(set cpu_ver 0)
	(set cpu_ver 1)
)
(set cpu_ver (askchoice
	(prompt "Which CPU version to install?")
	(help @askchoice-help)
	(choices "68000" "68020+")
	(default cpu_ver)
))
(if (= cpu_ver 0)
	(set handlername "L/smb2-handler.000")
	(set handlername "L/smb2-handler.020")
)
(copylib
	(prompt "Copying smb2-handler")
	(help @copylib-help)
	(source handlername)
	(dest "L:")
	(newname "smb2-handler")
)
(exit)
